<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheddd.activity.MoreActivity">

    <com.cheddd.view.TopNavigationBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tnb_more"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigation_title="@string/app_mine_more" />

    <ScrollView
        android:layout_below="@id/tnb_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_more_idea"
                style="@style/InfoRelativeLayout">

                <ImageView
                    android:id="@+id/iv_more_idea"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_idea" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_more_idea"
                    android:text="@string/app_moreidea" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>

            <View style="@style/View" />


            <RelativeLayout
                android:id="@+id/rl_more_question"
                style="@style/InfoRelativeLayout">

                <ImageView
                    android:id="@+id/iv_more_question"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_question" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_more_question"
                    android:text="@string/app_morequestion" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_more_mine"
                style="@style/InfoRelativeLayout">

                <ImageView
                    android:id="@+id/iv_more_mine"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_mine" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_more_mine"
                    android:text="@string/app_moremine" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>
            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_more_dot"
                style="@style/InfoRelativeLayout">

                <ImageView
                    android:id="@+id/iv_more_dot"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_dot" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_more_dot"
                    android:text="@string/app_moredot" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>
            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_more_serve"
                style="@style/InfoRelativeLayout">

                <ImageView
                    android:id="@+id/iv_more_serve"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_serve" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_more_serve"
                    android:text="@string/app_moreserve" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
