<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_minerecordadapter_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_minerecordadapter_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_minerecordadapter_money"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="2"
        android:textSize="11sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_minerecordadapter_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textColor="@color/colorRed"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_minerecordadapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_minerecordadapter_mark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:text="4"
        android:textSize="11sp"
        android:layout_marginBottom="8dp"/>
    <ImageView
      style="@style/RightImageView"/>
</RelativeLayout>