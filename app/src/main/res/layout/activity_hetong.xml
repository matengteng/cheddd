<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hetong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cheddd.activity.HetongActivity">

    <com.cheddd.view.TopNavigationBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tnb_hetong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigation_title="借款合同" />

    <RelativeLayout
        android:id="@+id/rl_hetong_fuwu"
        style="@style/InfoRelativeLayout">

        <ImageView
            android:id="@+id/iv_hetong_fuwu"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/hetong" />

        <TextView
            style="@style/InfoTextView"
            android:layout_toRightOf="@id/iv_hetong_fuwu"
            android:text="车贷贷服务协议" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:id="@+id/rl_hetong_xieyi"
        style="@style/InfoRelativeLayout">

        <ImageView
            android:id="@+id/iv_hetong_xieyi"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/hetong" />

        <TextView
            style="@style/InfoTextView"
            android:layout_toRightOf="@id/iv_hetong_xieyi"
            android:text="借款协议" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_hetong_koukuan"
        style="@style/InfoRelativeLayout">

        <ImageView
            android:id="@+id/iv_hetong_koukuan"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/hetong" />

        <TextView
            style="@style/InfoTextView"
            android:layout_toRightOf="@id/iv_hetong_koukuan"
            android:text="委托扣款协议" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:id="@+id/rl_hetong_fuwuweituo"
        style="@style/InfoRelativeLayout">

        <ImageView
            android:id="@+id/iv_hetong_fuwuweituo"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/hetong" />

        <TextView
            style="@style/InfoTextView"
            android:layout_toRightOf="@id/iv_hetong_fuwuweituo"
            android:text="服务委托协议" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:id="@+id/rl_hetong_shouquanshu"
        style="@style/InfoRelativeLayout">

        <ImageView
            android:id="@+id/iv_hetong_shouquanshu"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/hetong" />

        <TextView
            style="@style/InfoTextView"
            android:layout_toRightOf="@id/iv_hetong_shouquanshu"
            android:text="个人信息使用授权书" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>
</LinearLayout>
