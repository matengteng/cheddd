<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/dialog_loan_notice_back">

        <TextView
            android:id="@+id/tv_more_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_more_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_more_phone"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="400-000-999"
            android:textColor="#333"
            android:textSize="17sp" />

        <View
            style="@style/View"
            android:layout_below="@+id/tv_more_call" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_more_call"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/bt_more_calloff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="onClick"
                android:text="取消" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#999" />

            <Button
                android:id="@+id/bt_more_affire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="onClick"
                android:text="拨打" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>