<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        style="@style/ViewTop"
        android:background="@color/colorBackground" />

    <RelativeLayout
        android:id="@+id/rl_minebank_back"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/iv_minebank_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_minebank_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_minebank_icon"
            android:text="中国银行"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_minebank_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_minebank_bank"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_minebank_icon"
            android:text="储存卡"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/tv_minebank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_minebank_store"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_minebank_icon"
            android:text="****"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_minebank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_minebank_store"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tv_minebank1"
            android:text="****"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_minebank3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_minebank_store"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tv_minebank2"
            android:text="****"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_minebank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_minebank_store"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/tv_minebank3"
            android:text="9999"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/iv_minebank_bigmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</LinearLayout>