<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ce3729" />
            <corners android:bottomLeftRadius="90dp" android:bottomRightRadius="90dp" android:topLeftRadius="90dp" android:topRightRadius="90dp" />

            <stroke android:width="1dp" android:color="@color/colorRed" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorRed" />
            <corners android:bottomLeftRadius="90dp" android:bottomRightRadius="90dp" android:topLeftRadius="90dp" android:topRightRadius="90dp" />

            <stroke android:width="1dp" android:color="@color/colorRed" />
        </shape>
    </item>

</selector>
