<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retrieve_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.cheddd.activity.RetrieveLoginActivity">

    <com.cheddd.view.TopNavigationBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tnb_retrieveLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigation_title="@string/app_amendlogin" />

    <RelativeLayout style="@style/InfoRelativeLayout">

        <EditText
            android:id="@+id/et_retrieveLogin_password"
            style="@style/EditText"
            android:hint="原登录密码"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout style="@style/InfoRelativeLayout">

        <TextView
            android:id="@+id/tv_retrieveLogin_next"
            style="@style/InfoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="忘记登录密码" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_retrieveLogin_next"
        style="@style/Button"
        android:text="@string/app_next" />
</LinearLayout>
