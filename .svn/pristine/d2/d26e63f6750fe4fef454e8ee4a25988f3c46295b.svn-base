<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.cheddd.view.TopNavigationBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tnb_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigation_title="@string/app_info" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/app_info_petty"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/back_btn_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="@string/app_info_data"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_info_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="100%" />

        <ProgressBar
            android:id="@+id/pb_info_plan"
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_plan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="25" />
    </RelativeLayout>

    <View style="@style/View" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_info_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_phone"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_phone"
                    android:gravity="center"
                    android:text="@string/app_info_phone"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_phone_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_info_stats"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_status"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_status"
                    android:gravity="center"
                    android:text="@string/app_info_status"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_status_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_info_car"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_car"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_car"
                    android:gravity="center"
                    android:text="@string/app_info_bank"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_car_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/ViewTop" />

            <RelativeLayout
                android:id="@+id/rl_info_bank"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_bank"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_bank"
                    android:gravity="center"
                    android:text="@string/app_info_car"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_bank_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/ViewTop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/app_info_more"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_jindong"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_jindong"
                    android:gravity="center"
                    android:text="@string/app_info_jingdong"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_jindong_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_taobao"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_taobao"
                    android:gravity="center"
                    android:text="@string/app_info_taobao"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_taibao_optfor"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_info_zhifu"
                    android:layout_width="30sp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_zhifu"
                    android:gravity="center"
                    android:text="@string/app_info_zhifu"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_info_taibao_zhifu"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/opt_for"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/View" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>