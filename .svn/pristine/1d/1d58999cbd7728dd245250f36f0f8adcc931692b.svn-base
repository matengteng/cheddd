<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v1"
        style="@style/ViewTop"
        />

    <RelativeLayout

        android:id="@+id/rl_payoff_indent"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/v1">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_indent" />

        <TextView
            android:id="@+id/tv_payoff_indent"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="123456789" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_refund_time"
        style="@style/loanRelativeLayout"
        android:layout_below="@+id/rl_payoff_indent">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_time" />

        <TextView
            android:id="@+id/tv_payoff_time"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="2017.09.09" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payoff_money"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/rl_refund_time">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_money" />

        <TextView
            android:id="@+id/tv_payoff_money"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="9999" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payoff_month"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/rl_payoff_money">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_month" />

        <TextView
            android:id="@+id/tv_payoff_month"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="3个月" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payoff_interest"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/rl_payoff_month">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_interest" />

        <TextView
            android:id="@+id/tv_payoff_interest"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="1%" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payoff_refund"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/rl_payoff_interest">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_refund" />

        <TextView
            android:id="@+id/tv_payoff_refund"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="3期" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_payoff_way"
        style="@style/loanRelativeLayout"
        android:layout_below="@id/rl_payoff_refund">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_loanbean_way" />

        <TextView
            android:id="@+id/tv_payoff_way"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="现金分期" />

        <TextView
            android:id="@+id/tv_payoff_list"
            style="@style/InfoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="借款明细"
            android:textColor="#FF7E00" />
    </RelativeLayout>

    <View
        android:id="@+id/v"
        style="@style/View"
        android:layout_below="@id/rl_payoff_way" />

    <RelativeLayout
        android:id="@+id/rl_payoff_record"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/v"
        android:background="@color/colorWhite">

        <TextView
            style="@style/InfoTextView"
            android:text="@string/app_borrowmoney_record" />

        <ImageView style="@style/RightImageView" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_payoff_map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/payoff" />
</RelativeLayout>