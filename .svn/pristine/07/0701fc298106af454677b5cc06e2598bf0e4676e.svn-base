<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialogRefund_close"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_dilaogrefund_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="还款详情"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dilaogrefund_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dilaogrefund_1"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dilaogrefund_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dilaogrefund_2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="#666"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/fail" />
    </RelativeLayout>

    <View style="@style/View" />

    <ListView
        android:id="@+id/lv_dialogrefund_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>