<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lend_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.cheddd.activity.LendEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cheddd.view.TopNavigationBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tnb_lendEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigation_title="@string/app_petty_loan" />

        <View style="@style/ViewTop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntrymoney" />

                    <TextView
                        android:id="@+id/tv_lendEntry_momey"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="￥0.00" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryBank" />

                    <TextView
                        android:id="@+id/tv_lendEntry_bank"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="中国银行（8888）" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryInset" />

                    <TextView
                        android:id="@+id/tv_lendEntry_insert"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="0.05%" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryStartTime" />

                    <TextView
                        android:id="@+id/tv_lendEntry_startTime"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="2017.06.01-2017.09.01" />

                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryrefundTime" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundTime"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="2017.06.01" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryDay" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundDay"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="每月23日" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryDeadline" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundDeadline"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="5" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryUse" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundUse"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="个人消费" />
                </RelativeLayout>

                <RelativeLayout style="@style/loanRelativeLayout">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryBankId" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundBank"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="中国银行（9999）" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/loanRelativeLayout"
                    android:layout_marginBottom="10dp">

                    <TextView
                        style="@style/InfoTextView"
                        android:text="@string/app_lendEntryIsuse" />

                    <TextView
                        android:id="@+id/tv_lendEntry_refundIsuse"
                        style="@style/InfoTextView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="车贷贷" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/loanRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground">

                    <TextView
                        android:id="@+id/tv_lendEntry_Read"
                        style="@style/InfoTextView"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/app_lendEntryRead"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_lendEntry_Read"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/app_lendEntryContract"
                        android:textColor="#2785D4"
                        android:textSize="12sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/bt_lendEntry_affirm"
                    style="@style/Button"
                    android:layout_marginBottom="30dp"
                    android:enabled="true"
                    android:text="@string/app_lendEntryAffirm" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        android:gravity="center">

        <Button
            android:id="@+id/bt_petty_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:onClick="onClick"
            android:text="@string/app_lendMoneyknow"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/bt_petty_money"
            android:background="#333333" />

        <Button
            android:id="@+id/bt_petty_problem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/bt_petty_money"
            android:background="@null"
            android:onClick="onClick"
            android:text="@string/app_lendProblem"
            android:textColor="#333333" />
    </RelativeLayout>
</RelativeLayout>