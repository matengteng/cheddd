<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.cheddd.activity.RelationActivity">

    <com.cheddd.view.TopNavigationBar
        android:id="@+id/tnb_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigation_title="联系人" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout style="@style/InfoRelativeLayout">

                <TextView
                    style="@style/InfoTextView"
                    android:text="@string/app_just_relativs" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_relation_relatio"
                style="@style/InfoRelativeLayout">

                <TextView
                    android:id="@+id/tv_relation_father1"
                    style="@style/InfoTextView"
                    android:text="@string/app_regard" />

                <TextView
                    android:id="@+id/tv_relation_relation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/tv_relation_father1"
                    android:gravity="center_vertical"
                    android:text="@string/app_father"
                    android:textIsSelectable="true" />

                <ImageView
                    android:id="@+id/iv_relation_relation"
                    style="@style/RightImageView" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout style="@style/InfoRelativeLayout">

                <TextView
                    android:id="@+id/tv_relation_name"
                    style="@style/InfoTextView"
                    android:text="@string/app_username" />

                <EditText
                    android:id="@+id/et_relation_name"
                    style="@style/EditText"
                    android:layout_toRightOf="@id/tv_relation_name"
                    android:hint="@string/app_relation_input" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout style="@style/InfoRelativeLayout">

                <TextView
                    android:id="@+id/tv_relation_phone"
                    style="@style/InfoTextView"
                    android:text="@string/app_phone" />

                <EditText
                    android:id="@+id/et_relation_phone"
                    style="@style/EditText"
                    android:layout_toRightOf="@id/tv_relation_phone"
                    android:hint="@string/app_cellphone" />

                <ImageView
                    android:id="@+id/iv_relation_cellPhone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/sym_action_call" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/InfoRelativeLayout"
                android:background="@color/colorBackground">

                <Button
                    android:id="@+id/bt_relation_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_round_blue"
                    android:text="增加"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_relation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <include
                    layout="@layout/relation_emergency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_relation_submit"
                style="@style/Button"
                android:layout_marginBottom="30dp"
                android:text="@string/app_submit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
