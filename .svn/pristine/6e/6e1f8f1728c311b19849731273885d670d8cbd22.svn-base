<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/_dp_5"
        android:id="@+id/rl_dialog_close"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite">

        <TextView
            style="@style/InfoTextView"
            android:layout_centerInParent="true"
            android:text="@string/app_lendMoneyknow"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:padding="@dimen/_dp_5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_insert"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_insert_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_insert"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_insert_single"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_insert_single"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_insert_cash"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:padding="@dimen/_dp_5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_refund"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_insert_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_refund"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_refundtime"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:padding="@dimen/_dp_5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_ahead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_ahead"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_insert_ahead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ahead"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_aheadmoney"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>