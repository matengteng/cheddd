<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <CheckBox
            android:id="@+id/cb_advance_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_advance_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cb_advance_check"
            android:text=""
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_advance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_advance_indent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_advance_check"
            android:text=""
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_advance_refund"
            style="@style/InfoTextView"
            android:layout_marginLeft="140dp"
            android:text="999"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_marginLeft="230dp"
            android:id="@+id/tv_advance_respond1"
            style="@style/InfoTextView"
            android:text="应还"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_advance_respond"
            style="@style/InfoTextView"
            android:layout_marginLeft="260dp"
            android:text="222"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>