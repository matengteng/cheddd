<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View style="@style/ViewTop" />

    <RelativeLayout style="@style/InfoRelativeLayout">

        <TextView
            android:id="@+id/tv_refundrecord_stat"
            style="@style/InfoTextView"
            android:text="@string/app_ahead"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout style="@style/loanRelativeLayout">

        <TextView
            style="@style/InfoTextView"
            android:text="已还金额" />

        <TextView
            android:id="@+id/tv_refundrecord_refundmoney"
            style="@style/InfoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0.00"
            android:textColor="@color/colorRed"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout style="@style/loanRelativeLayout">

        <TextView
            style="@style/InfoTextView"
            android:text="还款日期" />

        <TextView
            android:id="@+id/tv_refundrecord_reality"
            style="@style/InfoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0.00"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout style="@style/loanRelativeLayout">

        <TextView
            style="@style/InfoTextView"
            android:text="预约还款日" />

        <TextView
            android:id="@+id/tv_refundrecord_appoint"
            style="@style/InfoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0.00"
            android:textSize="19sp" />
    </RelativeLayout>
</LinearLayout>