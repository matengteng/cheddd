<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cheddd.activity.MainActivity">

    <RadioGroup
        android:id="@+id/rg_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/rb_main_home"
            style="@style/RadioButton"
            android:checked="true"
            android:drawableTop="@drawable/index_tab"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_main_manage"
            style="@style/RadioButton"
            android:drawableTop="@drawable/info_tab"
            android:text="信息认证" />

        <RadioButton
            android:id="@+id/rb_main_mine"
            style="@style/RadioButton"
            android:drawableTop="@drawable/mine_tab"
            android:text="我的" />
    </RadioGroup>

    <View
        android:id="@+id/v_main_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg_main_fragment"
        android:background="@color/colorBackground" />

    <FrameLayout
        android:id="@+id/fl_main_radiofroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_main_line" />
</RelativeLayout>
