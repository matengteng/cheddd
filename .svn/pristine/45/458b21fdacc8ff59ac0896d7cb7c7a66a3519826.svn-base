<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout style="@style/InfoRelativeLayout">

                <TextView
                    style="@style/InfoTextView"
                    android:layout_centerInParent="true"
                    android:text="请输入支付密码"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">

                <TextView
                    android:id="@+id/tv_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="还款" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dialog"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="￥0.00"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:id="@+id/rl_dialog_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">

                <ImageView
                    android:id="@+id/iv_dialog"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/InfoTextView"
                    android:layout_toRightOf="@id/iv_dialog"
                    android:text="中国银行"
                    android:textSize="@dimen/sp_16" />

                <ImageView style="@style/RightImageView" />
            </RelativeLayout>

            <View style="@style/View" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:background="@color/colorWhite"
                android:gravity="center">

                <com.cheddd.view.PwdEditText

                    android:id="@+id/pet_pwd"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:cursorVisible="false"
                    android:enabled="true"
                    android:focusable="true"
                    android:inputType="number"
                    android:maxLength="6" />
            </RelativeLayout>

            <View style="@style/View" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>