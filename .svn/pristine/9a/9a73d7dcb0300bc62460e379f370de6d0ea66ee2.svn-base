<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/MineRelativeLayout">

        <ImageView
            android:id="@+id/iv_login_password"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/login_phone" />

        <EditText
            android:id="@+id/et_login_password_phone"
            style="@style/EditText"
            android:layout_toRightOf="@id/iv_login_password"
            android:hint="@string/app_cellphone"
            android:maxLength="11" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <RelativeLayout style="@style/MineRelativeLayout">

        <ImageView
            android:id="@+id/iv_login_trend_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/login_password" />

        <EditText
            android:id="@+id/et_login_password_password"
            style="@style/EditText"
            android:layout_toRightOf="@id/iv_login_trend_password"
            android:hint="@string/app_password"
            android:maxLength="11" />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="@color/colorBackground"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_login_password_forget"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/app_login_forget_password"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <Button
        android:id="@+id/bt_login_password"
        style="@style/Button"
        android:text="@string/app_login_login" />

    <Button
        android:id="@+id/bt_login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/app_register" />
</LinearLayout>