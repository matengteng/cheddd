<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialogRefund_close"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/tv_dilaogrefund_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="还款详情"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dilaogrefund_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dilaogrefund_1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="每月应还本金￥100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dilaogrefund_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dilaogrefund_2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="借满5个月总利息￥122.75"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <View style="@style/View" />

    <ListView
        android:id="@+id/lv_dialogrefund_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>