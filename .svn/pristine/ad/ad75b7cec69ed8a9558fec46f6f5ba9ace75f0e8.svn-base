<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialog_product"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_5">

        <TextView
            style="@style/InfoTextView"
            android:layout_centerHorizontal="true"
            android:text="产品介绍" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_dialog_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="先息后本:"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_product"
            android:layout_marginLeft="10dp"
            android:text="1-6月1.98%，高出全返，月月返:一次返3个月（0.5%管理费） 3-6月，首月0.99%，次月2.5%，高出全返，月 月返：一次返3个月（0.5%管理费）"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/View" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="全返:"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_back"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="1-2月 2.8%"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>