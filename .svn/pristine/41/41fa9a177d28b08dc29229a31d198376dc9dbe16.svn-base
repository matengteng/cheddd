<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_minerecordadapter_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="1000.0元"
        android:textColor="@color/colorRed"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_minerecordadapter_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_minerecordadapter_money"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="1000.0元"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_minerecordadapter_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="还款中"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_minerecordadapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_minerecordadapter_mark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="2017-09-07"
        android:textSize="15sp" />
</RelativeLayout>