    private void initData() {
        mTextViewMoney.setText("￥0.00");
        mTextViewBank.setText("中国银行");
        mTextViewIsuse.setText("0.05%");
        mTextViewStartTime.setText("2017.06.12");
        mTextViewtime.setText("2017.09.09");
        mTextViewDeadline.setText("5月");
        mTextViewrefundDay.setText("每月23日");
        mTextViewUse.setText("个人消费");
